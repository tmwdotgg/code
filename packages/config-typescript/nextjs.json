{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "ESNext",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es5",

    "checkJs": true,

  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
